<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <com.smtlibrary.Indicator.RVPIndicator
        android:id="@+id/indicator1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:indicator_color="@color/sweet_dialog_bg_color"
        app:indicator_style="triangle"
        app:item_count="2"
        app:text_color_hightlight="@color/sweet_dialog_bg_color"
        app:text_color_normal="@color/light_pink">

    </com.smtlibrary.Indicator.RVPIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
